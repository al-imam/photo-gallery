{
  "extends": ["next/core-web-vitals", "airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],

  "rules": {
    "no-unused-vars": 2,
    "prettier/prettier": 2,
    "arrow-body-style": 0,
    "prefer-arrow-callback": 0,
    "import/prefer-default-export": 0,
    "react-hooks/exhaustive-deps": 0,
    "import/extensions": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-shadow": [2, { "ignoreOnInitialization": true }]
  },

  "globals": {
    "React": true,
    "JSX": true
  }
}
